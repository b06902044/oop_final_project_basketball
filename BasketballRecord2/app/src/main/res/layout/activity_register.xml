<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    >
    <RelativeLayout
        android:layout_width="4000dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="15dp"
        android:background="@drawable/bg_reg_center"
        >
        <EditText
            android:id="@+id/reg_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textSize="15sp"
            android:hint="username"
            android:inputType="text"
            android:background="@drawable/bg_reg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/tv_warning"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/reg_username"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#FF0000"
            />
        <EditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:textSize="15sp"
            android:hint="password"
            android:background="@drawable/bg_reg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_below="@id/reg_username"
            />
        <TextView
            android:id="@+id/tv_warning2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/reg_password"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="#FF0000"
            />
        <Button
            android:id="@+id/reg_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/reg_password"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_regbtn"
            android:text="註冊"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            />
    </RelativeLayout>



</RelativeLayout>