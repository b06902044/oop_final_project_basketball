<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorOrange"
    >
    <TextView
        android:id="@+id/show_text"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="2.5"
        android:background="@color/colorOrange"
        android:text="歡迎回來"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <Button
            android:id="@+id/new_competition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_btn_1"
            android:text="新增盃賽"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            />
        <Button
            android:id="@+id/new_game"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_btn_2"
            android:text="新增比賽"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/game_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_btn_3"
            android:text="查詢紀錄"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_main_btn_4"
            android:text="登出"
            android:textColor="#FFFFFF"
            android:textSize="30sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.5"
        android:background="@color/colorOrange">
    </LinearLayout>



</LinearLayout>